#include <stdlib.h>

#include <time.h>

/* more headers goes there */

/**
* main - starting point of the program
* description: 'printing random numbers and if positive or negative using if statements'
* return: 0 if success
*/

int main(void)
{
int n;
srand(time(0));
n = rand() - RAND_MAX / 2;
if (n > 0)
{
printf("$d is positive\n", n);
} 
else if ( n == 0)
{
printf("%d is zero\n", n);
}
else if (n < 0)
{
printf("%d is negative\n", n);
}
return (0);
}
